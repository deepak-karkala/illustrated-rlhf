# Environment Configuration for RLHF Illustrated Guide
# Copy this file to .env.local and fill in the values for local development
# For Vercel deployment, set these variables in the Vercel Dashboard

# ============================================
# REQUIRED - Site Configuration
# ============================================

# Site URL - automatically set by Vercel in production
NEXT_PUBLIC_SITE_URL=http://localhost:3000

# Site metadata
NEXT_PUBLIC_SITE_NAME="RLHF Illustrated Guide"
NEXT_PUBLIC_SITE_DESCRIPTION="An interactive visual guide to Reinforcement Learning from Human Feedback"

# ============================================
# OPTIONAL - Analytics & Monitoring
# ============================================

# Vercel Analytics (recommended - privacy-focused, no extra configuration needed)
# Automatically enabled on Vercel deployments
# NEXT_PUBLIC_VERCEL_ANALYTICS_ENABLED=true

# Google Analytics (optional)
# NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=G_XXXXXXXXXX

# Sentry Error Tracking (optional)
# NEXT_PUBLIC_SENTRY_ENABLED=false
# SENTRY_AUTH_TOKEN=your_sentry_token_here
# NEXT_PUBLIC_SENTRY_PROJECT=illustrated-rlhf

# ============================================
# OPTIONAL - Feature Flags
# ============================================

# Enable/disable features per environment
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_ENABLE_PLAYGROUND=true
NEXT_PUBLIC_ENABLE_COMMUNITY_FEATURES=false

# Performance monitoring
NEXT_PUBLIC_ENABLE_PERFORMANCE_MONITORING=true

# Debug mode (disable in production)
NEXT_PUBLIC_DEBUG_MODE=false
NEXT_PUBLIC_SHOW_GRID_OVERLAY=false

# ============================================
# OPTIONAL - Contact & Community
# ============================================

# Contact email for inquiries
# NEXT_PUBLIC_CONTACT_EMAIL=contact@illustrated-rlhf.com

# Newsletter signup
# NEXT_PUBLIC_ENABLE_NEWSLETTER=false
# NEXT_PUBLIC_NEWSLETTER_FORM_URL=your_form_url

# ============================================
# VERCEL AUTOMATIC VARIABLES
# ============================================
# These are automatically set by Vercel CI/CD and should NOT be added to this file:
# - VERCEL_ENV (development, preview, production)
# - VERCEL_URL (automatic URL)
# - VERCEL_GIT_COMMIT_SHA
# - VERCEL_GIT_BRANCH
# - VERCEL_GIT_REPO_ID